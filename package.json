{
  "name": "solarflow-production",
  "version": "3.0.0",
  "description": "Production-ready SolarFlow solar energy management platform with real compliance checking",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "build": "npm run build:client && npm run build:docs",
    "build:client": "webpack --mode production",
    "build:docs": "node scripts/build-docs.js",
    "lint": "eslint src/ --ext .js,.jsx",
    "lint:fix": "eslint src/ --ext .js,.jsx --fix",
    "migrate": "node scripts/migrate-database.js",
    "backup": "node scripts/backup-database.js",
    "security:audit": "npm audit && node scripts/security-scan.js",
    "docker:build": "docker build -t solarflow:latest .",
    "docker:run": "docker run -p 3000:3000 -p 8080:8080 solarflow:latest",
    "deploy:staging": "node scripts/deploy-staging.js",
    "deploy:production": "node scripts/deploy-production.js"
  },
  "keywords": [
    "solar",
    "battery",
    "compliance",
    "AS/NZS",
    "clean-energy",
    "australia",
    "standards"
  ],
  "author": "SolarFlow Development Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "helmet": "^6.1.5",
    "cors": "^2.8.5",
    "pg": "^8.10.0",
    "bcrypt": "^5.1.0",
    "jsonwebtoken": "^9.0.0",
    "validator": "^13.9.0",
    "isomorphic-dompurify": "^2.0.0",
    "axios": "^1.4.0",
    "cheerio": "^1.0.0-rc.12",
    "multer": "^1.4.5-lts.1",
    "ws": "^8.13.0",
    "node-cron": "^3.0.2",
    "winston": "^3.8.2",
    "compression": "^1.7.4",
    "dotenv": "^16.0.3"
  },
  "devDependencies": {
    "nodemon": "^2.0.22",
    "jest": "^29.5.0",
    "supertest": "^6.3.3",
    "eslint": "^8.40.0",
    "webpack": "^5.81.0",
    "webpack-cli": "^5.0.4",
    "@babel/core": "^7.21.8",
    "@babel/preset-env": "^7.21.5",
    "babel-loader": "^9.1.2",
    "css-loader": "^6.7.4",
    "style-loader": "^3.3.3",
    "html-webpack-plugin": "^5.5.1"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js",
      "!src/migrations/*"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es6": true,
      "jest": true
    },
    "extends": ["eslint:recommended"],
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "rules": {
      "no-unused-vars": "error",
      "no-console": "warn",
      "prefer-const": "error",
      "no-var": "error"
    }
  }
}