# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/solarflow

# Redis
REDIS_URL=redis://localhost:6379

# JWT Secret (change in production)
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters

# API Configuration
PORT=3001
HOST=0.0.0.0
NODE_ENV=development

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Logging
LOG_LEVEL=info

# Next.js Frontend
NEXT_PUBLIC_API_URL=http://localhost:3001

# CER API (when available)
CER_API_KEY=your-cer-api-key
CER_API_URL=https://www.cleanenergyregulator.gov.au/api

# Standards API (when available) 
STANDARDS_API_KEY=your-standards-api-key

# File Storage
STORAGE_TYPE=local
# STORAGE_TYPE=s3
# AWS_REGION=ap-southeast-2
# AWS_BUCKET=solarflow-documents
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key

# Email (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASS=your-app-password

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60000