# SolarFlow Environment Configuration Example
# Copy this file to .env and fill in your values

# ==========================================
# Server Configuration
# ==========================================
NODE_ENV=production
SOLARFLOW_PORT=3000
SOLARFLOW_HOST=localhost

# ==========================================
# Data Storage Paths
# ==========================================
SOLARFLOW_DATA_DIR=/var/lib/solarflow
SOLARFLOW_LOG_DIR=/var/log/solarflow

# ==========================================
# LLM Configuration (OpenAI)
# ==========================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here
LLM_MODEL=gpt-4
LLM_MAX_TOKENS=800
LLM_TEMPERATURE=0.7

# ==========================================
# Auto-save & Backup Settings
# ==========================================
SOLARFLOW_AUTO_SAVE_INTERVAL=30000
SOLARFLOW_BACKUP_INTERVAL=300000
SOLARFLOW_MAX_BACKUPS=48

# ==========================================
# Security & Performance
# ==========================================
RATE_LIMIT_PER_MINUTE=100
ENABLE_COMPRESSION=true
ENABLE_CORS=true
LOG_LEVEL=info

# ==========================================
# OpenClaw VPS Integration
# ==========================================
OPENCLAW_VPS_ENABLED=false
OPENCLAW_DOMAIN=your-domain.com
OPENCLAW_SSL_ENABLED=false

# ==========================================
# Monitoring & Health Checks
# ==========================================
HEALTH_CHECK_INTERVAL=60000
PERFORMANCE_METRICS_ENABLED=true
ERROR_TRACKING_ENABLED=true